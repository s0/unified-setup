[module/wireless-network]
type = internal/network
interface = wlan0
interval = 2.0
ping-interval = 10

format-connected = "   <label-connected>"
format-connected-foreground = ${colors.icon-foreground}
format-connected-padding = 4
label-connected = "%essid% (%signal%)"
;;label-connected-foreground = ${colors.green}

format-disconnected = "   not connected"
format-disconnected-foreground = ${colors.foreground-faded}
format-disconnected-padding = 4

[module/wired-network]
type = internal/network
interface = ${env:ETH_IFACE:enp0s25}
interval = 2.0

format-connected = "   <label-connected>"
format-connected-foreground = ${colors.icon-foreground}
format-connected-padding = 4
label-connected = "%local_ip% %{F#555}(%linkspeed%)%{F-}"
;;label-connected-foreground = ${colors.green}

label-disconnected = ""

[module/keyboard]
type=custom/text
content="  "
content-foreground=${colors.icon-foreground}
click-left = onboard &

[module/backlight]
type = internal/backlight
card = intel_backlight

[module/brightdown]
type=custom/text
content="  "
content-foreground=${colors.icon-foreground}
click-left=xbacklight -dec 4%

[module/brightup]
type=custom/text
content="  "
content-foreground=${colors.icon-foreground}
click-left=xbacklight -inc 4%

[module/volmute]
type=custom/text
content="  "
content-foreground=${colors.icon-foreground}
click-left=pactl set-sink-mute @DEFAULT_SINK@ toggle

[module/voldown]
type=custom/text
content="  "
content-foreground=${colors.icon-foreground}
click-left=pactl set-sink-volume @DEFAULT_SINK@ -5%

[module/volup]
type=custom/text
content="  "
content-foreground=${colors.icon-foreground}
click-left=pactl set-sink-volume @DEFAULT_SINK@ +5%

[module/close-window]
type = custom/text
content = "  "
content-foreground = ${colors.red}
click-left = i3-msg kill


[module/lock]
type = custom/text
content = "    "
content-foreground = ${colors.accent}
click-left = wm-lock

[module/volume]
type = internal/pulseaudio
label-muted = muted
label-muted-foreground = ${colors.accent}

[module/i3touchmenu]
;; inspired by: https://github.com/ssmolkin1/i3touchmenu/blob/master/i3touchmenu
type = custom/menu

expand-right = true

format-spacing = 1

;; Open the menu
label-open = "    "
label-open-foreground = #FFF

;; Close the menu
label-close = "    "
label-close-foreground = ${colors.accent}
label-separator = "  -  "
label-separator-foreground = #666

;; Launcher
menu-0-0 = "    "
menu-0-0-exec = menu-open-1

;; Move
menu-0-1 = "    "
menu-0-1-exec = menu-open-2

;; Move to workspace
