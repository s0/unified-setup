[module/battery]
type = internal/battery
full-at = 98
format-charging = %{T3}Battery <label-charging> %{T-}
format-discharging = %{T3}Battery <label-discharging> %{T-}
;format-full = %{T3}Battery <label-full>
label-charging-font = 3
label-discharging-font = 3
label-full =
;label-full-font = 3

[module/keyboard]
type=custom/text
content="  "
content-foreground=${colors.icon-foreground}
click-left = onboard &

[module/brightdown]
type=custom/text
content="  "
content-foreground=${colors.icon-foreground}
click-left=xbacklight -dec 10

[module/brightup]
type=custom/text
content="  "
content-foreground=${colors.icon-foreground}
click-left=xbacklight -inc 10

[module/volmute]
type=custom/text
content="  "
content-foreground=${colors.icon-foreground}
click-left=pactl set-sink-mute @DEFAULT_SINK@ toggle

[module/voldown]
type=custom/text
content="  "
content-foreground=${colors.icon-foreground}
click-left=pactl set-sink-volume @DEFAULT_SINK@ -5%

[module/volup]
type=custom/text
content="  "
content-foreground=${colors.icon-foreground}
click-left=pactl set-sink-volume @DEFAULT_SINK@ +5%

[module/volume]
type = internal/pulseaudio
label-muted = muted
label-muted-foreground = ${colors.accent}

[module/powermenu]
type = custom/menu

format-padding = 3
format-foreground = #fff

label-open = Power
label-close = Close
label-separator = " - "

menu-0-0 = Power Off
menu-0-0-foreground = ${colors.accent}
menu-0-0-exec = menu-open-1
menu-0-1 = Log Off
menu-0-1-foreground = ${colors.accent}
menu-0-1-exec = menu-open-2
menu-0-2 = Lock
menu-0-2-foreground = ${colors.accent}
menu-0-2-exec = wm-lock

menu-1-0 = Cancel
menu-1-0-foreground = ${colors.accent}
menu-1-0-exec = menu-open-0
menu-1-1 = Power Off
menu-1-1-foreground = ${colors.accent}
menu-1-1-exec = systemctl poweroff

menu-2-0 = Cancel
menu-2-0-foreground = ${colors.accent}
menu-2-0-exec = menu-open-0
menu-2-1 = Log Off
menu-2-1-foreground = ${colors.accent}
menu-2-1-exec = killall i3

[module/i3touchmenu]
;; inspired by: https://github.com/ssmolkin1/i3touchmenu/blob/master/i3touchmenu
type = custom/menu

expand-right = true

format-spacing = 1

;; Open the menu
label-open = "    "
label-open-foreground = #FFF

;; Close the menu
label-close = "    "
label-close-foreground = ${colors.accent}
label-separator = "  -  "
label-separator-foreground = #666

;; Launcher
menu-0-0 = "    "
menu-0-0-exec = menu-open-1

;; Move
menu-0-1 = "    "
menu-0-1-exec = menu-open-2

;; Move to workspace
menu-0-2 = "    "
menu-0-2-exec = menu-open-3

;; Resize
menu-0-3 = "    "
menu-0-3-exec = menu-open-4

;; Launcher: Back to main menu
menu-1-0 = "    "
menu-1-0-exec = menu-open-0

menu-1-1="    "
menu-1-1-exec= wm-start-browser &

menu-1-2="    "
menu-1-2-exec = urxvt &

menu-1-3="    "
menu-1-3-exec = dmenu_run &

;; Move: Back to main menu
menu-2-0 = "    "
menu-2-0-exec = menu-open-0

;; Move: Left
